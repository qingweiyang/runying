<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.runying.po">

    <class name="Process" table="process">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="processNum"/>
        <property name="name"/>
        <property name="num"/>
        <property name="systemTime"/>
        
        <one-to-one name="responsible" class="User" cascade="all"/>
        <many-to-one name="receiver" column="receiverID" cascade="all"/>
        <many-to-one name="orders" column="ordersID" cascade="all"/>
    </class>

</hibernate-mapping>